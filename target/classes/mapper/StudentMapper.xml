<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ccut.common.mapper.StudentMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into `student` (username, password,academe,classname, name, phone, role)
        values (#{username},#{password},#{academe},#{classname},#{name},#{phone},#{role})
    </insert>

    <update id="updateById">
        update `student`
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                    password = #{password},
            </if>
            <if test="academe != null and academe != ''">
                academe = #{academe},
            </if>
            <if test="classname != null and classname != ''">
                classname = #{classname},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="selectAll" resultType="com.ccut.common.entity.Student">
        SELECT *
        FROM student
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="academe != null and academe != ''">
                AND academe LIKE CONCAT('%', #{academe}, '%')
            </if>
            <if test="classname != null and classname != ''">
                AND classname LIKE CONCAT('%', #{classname}, '%')
            </if>
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <if test="role != null and role != ''">
                AND role = #{role}
            </if>
        </where>
        ORDER BY id DESC
    </select>

</mapper>
