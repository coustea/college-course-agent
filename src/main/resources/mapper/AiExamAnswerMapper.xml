<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ccut.mapper.AiExamAnswerMapper">

    <resultMap id="AiExamAnswerRM" type="com.ccut.entity.AiExamAnswer">
        <id property="id" column="id"/>
        <result property="attemptId" column="attempt_id"/>
        <result property="questionId" column="question_id"/>
        <result property="studentAnswer" column="student_answer"/>
        <result property="correct" column="correct"/>
    </resultMap>

    <insert id="insert">
        INSERT INTO ai_exam_answers (
            <trim suffixOverrides=",">
                <if test="attemptId != null">attempt_id,</if>
                <if test="questionId != null">question_id,</if>
                <if test="studentAnswer != null">student_answer,</if>
                <if test="correct != null">correct,</if>
            </trim>
        ) VALUES (
            <trim suffixOverrides=",">
                <if test="attemptId != null">#{attemptId},</if>
                <if test="questionId != null">#{questionId},</if>
                <if test="studentAnswer != null">#{studentAnswer},</if>
                <if test="correct != null">#{correct},</if>
            </trim>
        )
    </insert>

    <update id="updateCorrect">
        UPDATE ai_exam_answers SET correct = #{correct} WHERE id = #{id}
    </update>

</mapper>



